{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "regexManagers": [
    {
      "fileMatch": [".*\\.lua$"],
      "matchStrings": [
        "-- renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\r?\n.*tag = \"(?<currentValue>.*)\"",
        "-- renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\r?\n.*tag = '(?<currentValue>.*)'",
        "-- renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\r?\n.*version = \"(?<currentValue>.*)\"",
        "-- renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\r?\n.*version = '(?<currentValue>.*)'"
      ]
    }
  ]
}
