{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "regexManagers": [
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\nARG .*=(?<currentValue>.*)"
      ]
    }
  ],
  "packageRules": [
    {
      "managers": ["regex"],
      "packagePatterns": [".*"],
      "extractVersion": "^(v)?(?<version>.*)$"
    }
  ]
}
